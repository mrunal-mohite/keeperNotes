pipeline {
    agent any

    environment {
        DOCKERHUB_USER = "mrunaldocker75"
        IMAGE_NAME = "keeperspring"
        IMAGE_TAG = "12"
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Checking out code..."
                checkout scm
            }
        }

        stage('Build Jar') {
            steps {
                echo "Building Spring Boot jar..."
                bat 'mvn clean package -f keeperSpring/pom.xml'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Building Docker image..."
                // Assuming Dockerfile is inside keeperSpring/
                bat "docker build -t %DOCKERHUB_USER%/%IMAGE_NAME%:%IMAGE_TAG% keeperSpring/"
            }
        }

        stage('Login & Push to DockerHub') {
            steps {
                echo "Logging in to DockerHub..."
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    bat 'docker login -u %DOCKER_USER% -p %DOCKER_PASS%'
                    echo "Pushing Docker image..."
                    bat "docker push %DOCKER_USER%/%IMAGE_NAME%:%IMAGE_TAG%"
                    bat 'docker logout'
                }
            }
        }
    }

    post {
        always {
            echo "Cleaning up workspace..."
            cleanWs()
        }
        failure {
            echo "Pipeline failed."
        }
        success {
            echo "Pipeline completed successfully!"
        }
    }
}
