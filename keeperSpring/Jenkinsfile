pipeline {
    agent any

    environment {
        DOCKERHUB_USER = "mrunaldocker75"
        DOCKERHUB_PASS = credentials('dockerhub-password') // Jenkins credential ID
        IMAGE_NAME    = "${DOCKERHUB_USER}/keeperspring"
        IMAGE_TAG     = "12"
    }

    options {
        skipStagesAfterUnstable()
        ansiColor('xterm')
        timeout(time: 30, unit: MINUTES)
    }

    stages {

        stage('Build with Maven') {
            steps {
                echo "Building the Spring Boot jar..."
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Docker Build') {
            steps {
                echo "Building Docker image using BuildKit..."
                script {
                    // Enable BuildKit
                    sh 'export DOCKER_BUILDKIT=1'
                    sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                    sh "docker tag ${IMAGE_NAME}:${IMAGE_TAG} ${IMAGE_NAME}:latest"
                }
            }
        }

        stage('Docker Push') {
            steps {
                echo "Logging in to DockerHub and pushing image..."
                script {
                    sh """
                        echo $DOCKERHUB_PASS | docker login -u $DOCKERHUB_USER --password-stdin
                        docker push ${IMAGE_NAME}:${IMAGE_TAG}
                        docker push ${IMAGE_NAME}:latest
                    """
                }
            }
        }

        stage('Deploy') {
            steps {
                echo "Deployment stage (optional) - skipped if not defined"
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed - check logs."
        }
    }
}
